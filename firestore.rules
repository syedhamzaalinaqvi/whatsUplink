rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /groups/{groupId} {
      // Allow anyone to read the list of groups
      allow read: if true;
      // Allow anyone to submit a new group
      allow create: if true;
      // Disallow updates and deletes for now for security
      allow update, delete: if false;
    }
  }
}
